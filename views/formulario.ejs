                <option value="style2" id="">Estilo2</option>
                <option value="style3" id="">Estilo3</option>
                <option value="style4" id="">Estilo4</option>
                <option value="style5" id="">Estilo5</option>
                <option value="style6" id="">Estilo6</option>
                <option value="style7" id="">Estilo7</option>
            </select>
            <label for="imagem">Imagem:</label>
            <input type="file" name="imagem" id="">

            <label for="titulo">Título:</label>
            <input type="text" name="titulo" id="">

            <label for="texto">Texto:</label>
            <textarea name="texto" id="" cols="30" rows="4" style="resize:none"></textarea>
            <br>

            <input type="submit" value="Salvar">
        </form>
    </div>
